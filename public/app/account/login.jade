h1 Please log in
div(ng-controller="umLoginCtrl")
	form
		.form-group
			input.form-control(placeholder="Email", ng-model="username")
		.form-group
			input.form-control(placeholder="Password", type="password", ng-model="password")
		button.btl.btn-primary(ng-click="signIn(username, password)" ng-hide="identity.isAuthenticated()") Sign in
		button.btl.btn-primary(ng-click="signOut()" ng-show="identity.isAuthenticated()") Sign out, {{identity.currentUser.firstName}}
	h1(ng-show="identity.currentUser.isAdmin()") You are an admin